@model IEnumerable<HomeManager.Models.ShoppingList>

@{
    ViewBag.Title = "Index";
}

<div data-role="header">
    <h2>Shopping Lists</h2>
</div>

<div data-role="content">
    <ul data-role="listview" data-inset="true" data-split-icon="delete">
        <li>@Html.ActionLink("Create New List", "Create")</li>
    @foreach (var item in Model)
    {
        <li>
            @Html.ActionLink(item.Store, "Details", new { id = item.Id })
            @Html.ActionLink("Delete", "Delete", new RouteValueDictionary { { "id", item.Id } })
        </li>
    }
    </ul>
</div>

<div data-role="footer">
    @Html.ActionLink("Home", "Index", "Home")
</div>