@model HomeManager.Models.ShoppingList

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>ShoppingList</legend>

    <div class="display-label">Store</div>
    <div class="display-field">@Model.Store</div>

    <div class="display-label">ShoppingListItems</div>
    <div class="display-field">@(Model.ShoppingListItems == null ? "None" : Model.ShoppingListItems.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


