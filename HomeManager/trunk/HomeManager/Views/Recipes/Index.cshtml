@model IEnumerable<HomeManager.Models.Recipe>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            Rating
        </th>
        <th>
            PrepTime
        </th>
        <th>
            CookTime
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="white-space: nowrap">
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "ui-icon ui-icon-pencil", title = "Edit" })
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "ui-icon ui-icon-plus", title = "Details" })
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "ui-icon ui-icon-minus", title = "Delete" })
        </td>
        <td style="white-space: nowrap">
            @item.Name
        </td>
        <td>
            @item.Description
        </td>
        <td>
            @item.Rating
        </td>
        <td>
            @item.PrepTime
        </td>
        <td>
            @item.CookTime
        </td>
    </tr>
}

</table>

