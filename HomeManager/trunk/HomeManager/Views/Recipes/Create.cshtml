@model HomeManager.Models.Recipe

@{
    ViewBag.Title = "Create";
}

<div data-role="header">
    <h2>Create @(Model == null || string.IsNullOrWhiteSpace(Model.Name) ? "Recipe" : Model.Name)</h2>
</div>

<div data-role="content">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <fieldset>
                @Html.LabelFor(model => model.Name)
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)

                @Html.LabelFor(model => model.Description)
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)

                @Html.LabelFor(model => model.Rating)
                @Html.EditorFor(model => model.Rating)
                @Html.ValidationMessageFor(model => model.Rating)

                @Html.LabelFor(model => model.PrepTime)
                @Html.EditorFor(model => model.PrepTime)
                @Html.ValidationMessageFor(model => model.PrepTime)

                @Html.LabelFor(model => model.CookTime)
                @Html.EditorFor(model => model.CookTime)
                @Html.ValidationMessageFor(model => model.CookTime)

                @Html.LabelFor(model => model.Source)
                @Html.EditorFor(model => model.Source)
                @Html.ValidationMessageFor(model => model.Source)

                @Html.LabelFor(model => model.Servings)
                @Html.EditorFor(model => model.Servings)
                @Html.ValidationMessageFor(model => model.Servings)

                <input type="submit" value="Create" />
        </fieldset>
    }
</div>

<div data-role="footer">
    @Html.ActionLink("Back to List", "Index")
</div>
