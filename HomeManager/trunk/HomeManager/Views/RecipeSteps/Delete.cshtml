@model HomeManager.Models.RecipeStep

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>RecipeStep</legend>

    <div class="display-label">Rank</div>
    <div class="display-field">@Model.Rank</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">Recipe</div>
    <div class="display-field">@(Model.Recipe == null ? "None" : Model.Recipe.Name)</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


