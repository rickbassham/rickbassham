@model HomeManager.Models.RecipeStep

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="editor-label">
    @Html.LabelFor(model => model.Rank)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Rank)
    @Html.ValidationMessageFor(model => model.Rank)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.Description)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Description)
    @Html.ValidationMessageFor(model => model.Description)
</div>

<div class="editor-label">
    Recipe
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.RecipeId, ((IEnumerable<HomeManager.Models.Recipe>)ViewBag.PossibleRecipes).Select(option => new SelectListItem {
        Text = (option == null ? "None" : option.Name), 
        Value = option.Id.ToString(),
        Selected = (Model != null) && (option.Id == Model.RecipeId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.RecipeId)
</div>
