@model HomeManager.Models.Item

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="editor-label">
    @Html.LabelFor(model => model.Name)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Name)
    @Html.ValidationMessageFor(model => model.Name)
</div>

<div class="editor-label">
    ItemType
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.ItemTypeId, ((IEnumerable<HomeManager.Models.ItemType>)ViewBag.PossibleItemTypes).Select(option => new SelectListItem {
        Text = (option == null ? "None" : option.Name), 
        Value = option.Id.ToString(),
        Selected = (Model != null) && (option.Id == Model.ItemTypeId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.ItemTypeId)
</div>
