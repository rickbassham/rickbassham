@model IEnumerable<HomeManager.Models.Item>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Name
        </th>
        <th>
            ItemType
        </th>
        <th>
            Ingredients
        </th>
        <th>
            ShoppingListItems
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Name
        </td>
        <td>
			@(item.ItemType == null ? "None" : item.ItemType.Name)
        </td>
        <td>
			@(item.Ingredients == null ? "None" : item.Ingredients.Count.ToString())
        </td>
        <td>
			@(item.ShoppingListItems == null ? "None" : item.ShoppingListItems.Count.ToString())
        </td>
    </tr>
}

</table>


