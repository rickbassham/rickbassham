@model HomeManager.Models.Item

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Item</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">ItemType</div>
    <div class="display-field">@(Model.ItemType == null ? "None" : Model.ItemType.Name)</div>

    <div class="display-label">Ingredients</div>
    <div class="display-field">@(Model.Ingredients == null ? "None" : Model.Ingredients.Count.ToString())</div>

    <div class="display-label">ShoppingListItems</div>
    <div class="display-field">@(Model.ShoppingListItems == null ? "None" : Model.ShoppingListItems.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


